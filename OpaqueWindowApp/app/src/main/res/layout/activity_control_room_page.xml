<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thuan.opaquewindowapp.ControlRoomPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="#64B5F6"
        android:text="Master Bedroom"
        android:textSize="30dp"
        android:textColor="#FFFFFFFF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Window Configurations"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/button"
                android:padding="20dp"
                android:text="Manual"
                android:textColor="#2D8CD6" />
            <Button
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button"
                android:padding="20dp"
                android:text="Automatic"
                android:textColor="#2D8CD6"/>
            </LinearLayout>
        </LinearLayout>
    <TableLayout
        android:id="@+id/windowButtonTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:id="@+id/winButton1"
                android:layout_height="100dp"
                android:layout_width="150dp"
                android:background="@drawable/windowbutton" />
            <Button
                android:id="@+id/winButton2"
                android:layout_height="100dp"
                android:layout_width="150dp"
                android:background="@drawable/windowbutton" />
        </TableRow>
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <Button
                android:id="@+id/winButton3"
                android:layout_height="100dp"
                android:layout_width="150dp"
                android:background="@drawable/windowbutton" />
            <Button
                android:id="@+id/winButton4"
                android:layout_height="100dp"
                android:layout_width="150dp"
                android:background="@drawable/windowbutton" />
        </TableRow>


    </TableLayout>
</LinearLayout>
